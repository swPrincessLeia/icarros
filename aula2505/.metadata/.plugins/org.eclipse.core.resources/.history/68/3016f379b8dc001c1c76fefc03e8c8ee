import javax.swing.JOptionPane;

public class BuscaDeContatos extends ListaDeContatos {

	

	public void buscaContatos(String email) {

		try {
			// variavel linha de comando qsl
			String query = "select * from icarros.contatos where email like '%" + email + "%'";

			this.resultset = this.statement.executeQuery(query);
			this.statement = this.connection.createStatement();

			while (this.resultset.next()) {

				String meuID = resultset.getString("id");
				String meuNome = resultset.getString("nome");
				int idade = resultset.getInt("idade");
				String email = resultset.getNString("email");
				String funcao = resultset.getString("funcao");
				JOptionPane.showMessageDialog(null,"id: " + meuID + 
						 " | Nome: " + meuNome + 
						 " | Idade:" + idade +
						 " | E-mail: " + email + 
						 " | Função: " + funcao);

			}

		} catch (Exception e) {
			System.out.println("Erro" + e.getMessage());

		}

	}

}
