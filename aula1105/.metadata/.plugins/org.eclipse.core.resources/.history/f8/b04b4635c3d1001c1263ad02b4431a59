import java.util.Scanner;

public class ArrayExemplo {

	public static void main(String[] args) {

		Scanner in = new Scanner(System.in);
		String[] frutas = { "Uva", "Melão", "Morango", "Laranja" };

		System.out.println(frutas.length);

		System.out.println("\nExercício 4: mostrar lista de frutas com numeração de 1 até 4");

		for (int i = 0; i < frutas.length; i++) {

			System.out.println(i + 1 + " - " + frutas[i]);

		}

	}
}
