package metodos;

import java.text.Normalizer;
import java.util.Arrays;
import java.util.List;

import objetos.Contato;

public class main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		ListaContatos listaContatos = new ListaContatos();
		CRUDContato crud = new CRUDContato();
		listaContatos.Conectar();
		crud.Conectar();
		// for (String l : listaContatos.listaContatos()) {
		// System.out.println(l);

		// }

		List<String> listaNomes = Arrays.asList("Joana", "Matheus", "Thales", "Thaís", "Lucas", "Daniela", "Caio",
				"Lucas", "Carina", "Ricardo", "Noa");
		for (String nome : listaNomes) {
			System.out.println(nome);
			
			
			String teste = Normalizer.normalize(nome, Normalizer.Form.NFD).replaceAll("[^\\p{ASCII}]", "");
			crud.inserirContato(nome, 0, teste.toLowerCase() + "@icarros.com.br", "Desenvolvedor");
		}

		crud.editarContato("19", null, 0, null, null);
		crud.inserirContato("Princess Leia", 0, null, null);

		for (Contato c : listaContatos.listaContatosObj()) {
			System.out.println("\nId: " + c.getIdContato() + "\nNome: " + c.getNomeContato() + "\nIdade: "
					+ c.getIdadeContato() + "\nE-mail: " + c.getEmailContato() + "\nFunção: " + c.getFuncaoContato());
		}

		// ArrayList<Contato> listCont = listaContatos.listaContatosObj();

		// for(int i =0; i<=listCont.size(); i++) {

		// System.out.println(listCont.getClass());

		// }

	}

}
