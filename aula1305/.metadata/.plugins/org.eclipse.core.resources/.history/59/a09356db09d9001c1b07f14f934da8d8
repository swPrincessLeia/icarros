import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Date;
import java.text.SimpleDateFormat;
import java.util.Arrays;
import java.util.List;

public class ProcessaArquivoTryCatch {
//entregar

	/*
	 * utilize try catch para escrever fisicamente o arquivo se o arquivo não
	 * existir você terá uma exceção e mandar ele criar file writwr print
	 */

	public static void main(String[] args) throws IOException {
		// entregar
		// Acidinando todos os produtos numa lista.
		// Ouvi sobre asList na aula, acho que foi o colega thales que comentou sobre
		List<String> produtos = Arrays.asList("Mouse", "Teclado", "Scanner", "Impressora", "Monitor");

		int dia = 13;
		int mes = 05;
		int ano = 2022;
		Date data = new Date(ano - 1900, mes - 1, dia);
		SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyyy");

		String path = "C:\\Users\\danie\\Downloads\\Icarros\\icarros1305\\ArquivoTryCatch\\produtos.txt";
		File arq = new File(path);
		int count = 1;
		int nomearq;
		if (arq.exists()) {
			System.out.println("Arquivo já existe");
		} else {
			System.out.println("craexiste");

			while (count < 6) {
				nomearq = count;
				String ns = Integer.toString(nomearq);
				String nome = "protudos " + ns;
				path = "C:\\Users\\danie\\Downloads\\Icarros\\icarros1305\\ArquivoTryCatch\\" + nome + ".txt";
				FileWriter arquivo = new FileWriter(path);
				PrintWriter gravarArquivo = new PrintWriter(arquivo);

				gravarArquivo.printf("Produtos Cadastrados" + "\n" + sdf.format(data));
				for (int resposta = 0; resposta < 5; resposta++) {

					gravarArquivo.printf("\n" + produtos.get(resposta));
				}
				arquivo.close();
				count++;
			}

		}

	}

}
