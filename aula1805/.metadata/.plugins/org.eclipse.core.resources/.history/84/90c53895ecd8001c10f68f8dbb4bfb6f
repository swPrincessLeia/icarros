import java.util.Scanner;

/*Projeto:ExecutaClassesMetodos

criar 5 classes de retorno

Mostra preço mouse   R$ 35,00

Mostra preço teclado R$ 58,00

Mostra preço impressora R$ 380,00

Mostra preço scanner R$ 180,00

Mostra preço monitor R$ 420,00

classe:ProcessaTudo

Case

1 - Mouse

2 - Teclado

3 - Impressora

4 - Scanner

5 - Monitor

6 - Sair
*/

public class ProcessaTudo {

	public static void main(String[] args) {

		Scanner entrada = new Scanner(System.in);

		MousePreco mouse = new MousePreco();
		TecladoPreco teclado = new TecladoPreco();
		ImpressoraPreco impressora = new ImpressoraPreco();
		ScannerPreco scanner = new ScannerPreco();
		MonitorPreco monitor = new MonitorPreco();
		boolean loop = true;

		do {
			System.out.println("Informe a opção desejada " + "\n1 - Mouse" + "\n2 - Teclado" + "\n3 - Ipressora"
					+ "\n4 - Scanner" + "\n5 - Monitor");
			int opcaoMenu = entrada.nextInt();

			switch (opcaoMenu) {

			case 1:
				System.out.println(mouse.precoMouse);
				break;
			case 2:
				System.out.println(teclado.precoTeclado);
				break;
			case 3:
				System.out.println(impressora.precoImpressora);
				break;
			case 4:
				System.out.println(scanner.precoScanner);
				break;
			case 5:
				System.out.println(monitor.precoMonitor);
				break;
			case 6:
				System.out.println("Tchau!");
				loop = false;
				break;
			default:
				System.out.println("Opção inválida");

			}
		} while (loop);
	}

}
