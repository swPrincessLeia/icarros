import java.util.InputMismatchException;
import java.util.Scanner;

public class ChamaFuncoes {

	public static void main(String[] args) {

		Scanner entrada = new Scanner(System.in);

		Soma soma = new Soma();
		Subtracao subtracao = new Subtracao();
		Multiplicacao multiplicacao = new Multiplicacao();
		Divisao divisao = new Divisao();
		MsgProcessaCalculo msgCalculo = new MsgProcessaCalculo();
		boolean repete = true;
		double valorA, valorB;
		int opcaoMenu;

		do {
			try {

				System.out.println("\nInforme a opção desejada entre 1 e 5\n" + "\n1 - Somar" + "\n2 - Subtrair"
						+ "\n3 - Multiplicar" + "\n4 - Dividir" + "\n5 - Sair");

				opcaoMenu = entrada.nextInt();			

				if (opcaoMenu > 0 && opcaoMenu < 6) {
					System.out.println("\nDigite o Valor A");
					valorA = entrada.nextDouble();
					System.out.println("Digite o Valor B");
					valorB = entrada.nextDouble();

					switch (opcaoMenu) {

					case 1:
						msgCalculo.msgCalcular(valorA, valorB, soma.somar(valorA, valorB));
						break;
					case 2:
						msgCalculo.msgCalcular(valorA, valorB, subtracao.subtrair(valorA, valorB));
						break;
					case 3:
						msgCalculo.msgCalcular(valorA, valorB, multiplicacao.multiplicar(valorA, valorB));
						break;
					case 4:
						msgCalculo.msgCalcular(valorA, valorB, divisao.dividir(valorA, valorB));
						break;
					case 5:
						System.out.println("\nPrograma ecerrado.");
						repete = false;
						break;

					}
				}
			} catch (Exception e) {
				System.out.println("Caractere inválido!");
				break;
			}

		} while (repete);

	}

}
