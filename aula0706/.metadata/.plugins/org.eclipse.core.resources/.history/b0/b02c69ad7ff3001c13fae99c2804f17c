	<%
	if (request.getParameter("botaoAtualizar")!= null) {

		CRUD crud = new CRUD();
		crud.Conectar();
		String nome = request.getParameter("nomelivro");
		String autor = request.getParameter("autorlivro");
		String editora = request.getParameter("editoralivro");
		String data = request.getParameter("datalivro");
		String idLivro = request.getParameter("id");

		SimpleDateFormat formater = new SimpleDateFormat("yyyy-MM-dd");
		formater.parse(data);

		crud.editarLivro(idLivro, nome, autor, editora, formater.parse(data));			
	}
